# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/rent_to_own

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Server Configuration
PORT=4007
NODE_ENV=development

# External APIs - NHTSA Vehicle Validation
NHTSA_API_ENABLED=true
NHTSA_API_BASE_URL=https://vpic.nhtsa.dot.gov/api

# External APIs - OpenStreetMap Geocoding
OPENSTREETMAP_API_ENABLED=true
OPENSTREETMAP_API_BASE_URL=https://nominatim.openstreetmap.org
OPENSTREETMAP_USER_AGENT=RentToBuyCarMarketplace/1.0

# External APIs - Frankfurter Currency Exchange
FRANKFURTER_API_ENABLED=true
FRANKFURTER_API_BASE_URL=https://api.frankfurter.app

# External APIs - Open-Meteo Weather
OPEN_METEO_API_ENABLED=true
OPEN_METEO_API_BASE_URL=https://api.open-meteo.com/v1
