{
  "name": "rent-to-own-marketplace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shared/*",
    "services/*"
  ],
  "scripts": {
    "dev": "next dev -p 4007",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "init-db": "node --env-file=.env --import tsx scripts/init-db.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    "seed": "node --env-file=.env scripts/seed-database.js",
    "migrate": "psql -U postgres -d rent_to_own -f scripts/migration-security-rbac.sql",
    "health": "node scripts/health-check.js",
    "docs:generate": "node scripts/generate-swagger.js",
    "docs:serve": "npx swagger-ui-watcher swagger.json"
  },
  "dependencies": {
    "@instantdb/react": "^0.22.61",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "amqplib": "^0.10.3",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bottleneck": "^2.19.5",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.16",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.554.0",
    "next": "^14.0.4",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "speakeasy": "^2.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/amqplib": "^0.10.4",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "autoprefixer": "^10.4.16",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.32",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
